@model ListViewModel


<table class="table table-striped table-bordered col100">
    <tr>
        <th scope="col">Date </th>
        <th scope="col">Description </th>
        <th scope="col">Category </th>
        <th scope="col">Amount</th>
    </tr>

    @foreach (var p in Model.Debt)
    {
        <tr>
            <td scope="row">@String.Format("{0:dd/MM/yyyy}", p.Date)</td>
            <td scope="row">@p.Description</td>
            <td scope="row">@p.Category</td>
            <td scope="row">@String.Format("{0:c}", p.Amount)</td>
        </tr>
    }
</table>


<div page-model="@Model.PagingInfo" page-action="List" page-classes-enabled="true"
     page-class="btn" page-class-normal="btn-secondary"
     page-class-selected="btn-primary" page-url-category="@Model.CurrentCategory"
     page-class-selected="btn-primary" class="btn-group pull-right m-1">
</div>
