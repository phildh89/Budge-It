@model BudgeIt.Models.UserInfo
    <h1>Login</h1>

@using (Html.BeginForm("Authorize", "User", FormMethod.Post))
{@Html.AntiForgeryToken();
<hr />
<div class="row">
    <div class="col100 min-vw-100">
        <form asp-action="Login">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Login" class="btn btn-primary" />
            </div>
            <div class="form-group">
                <label class="field-validation-error">@ViewBag.LoginError</label>
            </div>
            <div class="form-group">
                <label class="label-success">@ViewBag.SuccessMessage</label>
            </div>
            <div>
                <a asp-action="UserReg">Create an Account</a>
            </div>
        </form>
    </div>
</div>

}

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}